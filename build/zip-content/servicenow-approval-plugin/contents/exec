#!/usr/bin/env bash
set -eu

echo "= $@ ="
exit 0

PYTHON='/usr/bin/python3'

# check if python is installed
[[ ! -f ${PYTHON} ]] && sh -c 'echo nao tem pytho;exit 1'

# create python environment
${PYTHON} -m venv venv

# activate venv
source venv/bin/activate
${PYTHON} -m pip install PyYAML requests

# execute script
${PYTHON} 

exit 0

if [[ "true" == "$RD_CONFIG_DEBUG" ]] ; then
    env | grep RD_CONFIG
fi

echo "running servicenow-approval-plugin"
echo "Example Config: $RD_CONFIG_EXAMPLE"
echo "Example Multi-Line Config: $RD_CONFIG_MULTILINEEXAMPLE"
echo "Example Select Config: $RD_CONFIG_EXAMPLESELECT"
